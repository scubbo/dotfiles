#!/usr/bin/env python3
"""Export a Granola meeting to markdown format."""

import argparse
import sys
from pathlib import Path

# Add scripts dir to path for local imports
sys.path.insert(0, str(Path(__file__).parent))

from granola_parser import (
    load_cache, get_document_by_id, get_transcript, get_summary,
    get_meeting_metadata, format_timestamp, transcript_to_text
)


def generate_markdown(state: dict, meeting_id: str) -> str:
    """Generate markdown content for a meeting."""
    doc = get_document_by_id(state, meeting_id)
    if not doc:
        raise ValueError(f"Meeting not found with ID '{meeting_id}'")
    
    lines = []
    
    title = doc.get('title', 'Untitled')
    created = format_timestamp(doc.get('created_at', ''))
    
    lines.append(f"# {title}")
    lines.append("")
    lines.append(f"**Date:** {created}")
    
    # Metadata
    metadata = get_meeting_metadata(state, meeting_id)
    if metadata:
        creator = metadata.get('creator', {})
        creator_name = creator.get('name', creator.get('email', 'Unknown'))
        lines.append(f"**Organizer:** {creator_name}")
        
        attendees = metadata.get('attendees', [])
        if attendees:
            names = [a.get('name', a.get('email', 'Unknown')) for a in attendees]
            lines.append(f"**Attendees:** {', '.join(names)}")
        
        conferencing = metadata.get('conferencing', {})
        if conferencing and conferencing.get('url'):
            lines.append(f"**Meeting Link:** {conferencing['url']}")
    
    lines.append("")
    
    # Summary
    summary = get_summary(state, meeting_id)
    if summary:
        lines.append("## Summary")
        lines.append("")
        lines.append(summary)
        lines.append("")
    
    # User notes
    notes_md = doc.get('notes_markdown')
    notes_plain = doc.get('notes_plain')
    if notes_md:
        lines.append("## Notes")
        lines.append("")
        lines.append(notes_md)
        lines.append("")
    elif notes_plain:
        lines.append("## Notes")
        lines.append("")
        lines.append(notes_plain)
        lines.append("")
    
    # Transcript
    transcript_segments = get_transcript(state, meeting_id)
    if transcript_segments:
        lines.append("## Transcript")
        lines.append("")
        lines.append(transcript_to_text(transcript_segments))
        lines.append("")
    
    return "\n".join(lines)


def main():
    parser = argparse.ArgumentParser(description='Export a Granola meeting to markdown')
    parser.add_argument('meeting_id', help='Meeting ID (UUID)')
    parser.add_argument('--output', '-o', help='Output file path (prints to stdout if not specified)')
    args = parser.parse_args()
    
    try:
        state = load_cache()
    except FileNotFoundError as e:
        print(f"Error: {e}", file=sys.stderr)
        sys.exit(1)
    
    try:
        markdown = generate_markdown(state, args.meeting_id)
    except ValueError as e:
        print(f"Error: {e}", file=sys.stderr)
        sys.exit(1)
    
    if args.output:
        output_path = Path(args.output)
        output_path.write_text(markdown)
        print(f"Exported to {output_path}")
    else:
        print(markdown)


if __name__ == '__main__':
    main()
